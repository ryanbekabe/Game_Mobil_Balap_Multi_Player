<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="#121212">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textColor="#FF4081"
            android:textSize="42sp"
            android:textStyle="bold"
            android:layout_marginBottom="48dp"/>

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/player_name_hint"
            android:textColorHint="#888"
            android:textColor="#FFF"
            android:backgroundTint="#FF4081"
            android:layout_marginBottom="12dp"
            android:text="@string/default_player_name"/>

        <EditText
            android:id="@+id/ipInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ip_host_hint"
            android:textColorHint="#888"
            android:textColor="#FFF"
            android:backgroundTint="#3F51B5"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bot_players_label"
            android:textColor="#FFF"/>
        <RadioGroup
            android:id="@+id/botRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <RadioButton
                android:id="@+id/bot0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bot_0"
                android:textColor="#FFF"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/bot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bot_1"
                android:layout_marginStart="16dp"
                android:textColor="#FFF"/>
            <RadioButton
                android:id="@+id/bot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bot_2"
                android:layout_marginStart="16dp"
                android:textColor="#FFF"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bot_speed_label"
            android:textColor="#FFF"/>
        <RadioGroup
            android:id="@+id/botSpeedRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <RadioButton
                android:id="@+id/speedSlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed_slow"
                android:textColor="#FFF"/>
            <RadioButton
                android:id="@+id/speedMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed_medium"
                android:layout_marginStart="16dp"
                android:textColor="#FFF"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/speedFast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed_fast"
                android:layout_marginStart="16dp"
                android:textColor="#FFF"/>
        </RadioGroup>

        <Button
            android:id="@+id/hostButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/host_game_btn"
            android:backgroundTint="#FF4081"
            android:textColor="#FFF"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/joinButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/join_game_btn"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFF"
            android:layout_marginBottom="16dp"/>
            
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_default"
            android:textColor="#AAA"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/myIpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_ip_placeholder"
            android:textColor="#00E676"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.hanyajasa.gamemobilbalapmultiplayer.GameView
            android:id="@+id/gameView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
            
        <Button
            android:id="@+id/hostMenuBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:text="@string/menu_icon"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#88000000"
            android:visibility="gone"/>

        <Button
            android:id="@+id/playAgainBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:text="@string/play_again_btn"
            android:backgroundTint="#FFC107"
            android:textColor="#000"
            android:textStyle="bold"
            android:visibility="gone"/>

        <!-- Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                
                <Button
                    android:id="@+id/leftBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="@string/left_arrow"
                    android:backgroundTint="#55FFFFFF"/>
                
                <Button
                    android:id="@+id/rightBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="@string/right_arrow"
                    android:backgroundTint="#55FFFFFF"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/accelBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/accel_btn"
                android:backgroundTint="#55FF4081"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>